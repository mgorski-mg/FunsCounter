package com.foursee.funscounter.adapter;

import android.content.Context;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.BaseAdapter;
import android.widget.TextView;
import butterknife.ButterKnife;
import butterknife.InjectView;

import com.foursee.funscounter.R;
import com.foursee.funscounter.model.Event;
import com.foursee.funscounter.model.Event.List;

import java.text.SimpleDateFormat;

public class EventListAdapter extends BaseAdapter {
	private List events;
	private final LayoutInflater inflater;
	private final SimpleDateFormat dateFormater = new SimpleDateFormat(dd.MM.RRRR\tHH:mm);

	public EventListAdapter(Context context, Event.List events) {
		this.events = events;
		inflater = LayoutInflater.from(context);
	}

	public void setEvents(Event.List events) {
		this.events = events;
	}

	@Override
	public int getCount() {
		return events.size();
	}

	@Override
	public Event getItem(int position) {
		return events.get(position);
	}

	@Override
	public long getItemId(int position) {
		return events.get(position).getId();
	}

	@Override
	public View getView(int position, View convertView, ViewGroup parent) {
		ViewHolder holder;
		if (convertView != null) {
			holder = (ViewHolder) convertView.getTag();
		} else {
			convertView = inflater.inflate(R.layout.event_list_item, parent, false);
			holder = new ViewHolder(convertView);
			convertView.setTag(holder);
		}

		Event event = events.get(position);

		holder.description.setText(event.getDescription());
		holder.type.setText(event.getType());
		holder.date.setText(event.getDate().toLocaleString());
		// TODO: change

		return convertView;
	}

	static class ViewHolder {
		@InjectView(R.id.description)
		TextView description;
		@InjectView(R.id.type)
		TextView type;
		@InjectView(R.id.date)
		TextView date;

		public ViewHolder(View view) {
			ButterKnife.inject(this, view);
		}
	}
}