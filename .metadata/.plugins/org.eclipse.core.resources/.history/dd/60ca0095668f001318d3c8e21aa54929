package com.foursee.funscounter.model.operation;

import com.foursee.funscounter.model.Event;
import com.foursee.funscounter.model.Gate;

public class EventOperations {
	private final Event event;

	public EventOperations(Event event) {
		this.event = event;
	}

	public int getCapacity() {
		Gate.List gates = event.getGates();

		int capacity = 0;
		for (Gate gate : gates) {
			capacity += gate.getCapacity();
		}
		return capacity;
	}

	public int getCapacity(int gateId) {
		Gate.List gates = event.getGates();
		return gateId < gates.size() ? gates.get(gateId).getCapacity() : 0;
	}

	public int getAmount() {
		Gate.List gates = event.getGates();

		int amount = 0;
		for (Gate gate : gates) {
			amount += gate.getAmount();
		}
		return amount;
	}

	public int getAmount(int gateId) {
		Gate.List gates = event.getGates();
		return gateId < gates.size() ? gates.get(gateId).getAmount() : 0;
	}
}